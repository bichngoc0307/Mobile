<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:padding="8dp"
                                                   android:id="@+id/wrapper">

    <TextView
            android:text="President of the United States"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/role"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="16dp" android:textSize="20sp"
            android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Donald J. Trump (Republica)"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/president"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:padding="16dp" android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/role"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:padding="8dp"
                                                   android:id="@+id/wrapper">

    <androidx.cardview.widget.CardView android:layout_width="120dp" android:layout_height="120dp"
                                       app:layout_constraintTop_toTopOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/cardView"
                                       app:cardCornerRadius="160dp" android:paddingTop="16dp"
                                       android:paddingBottom="16dp">
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/represent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent" android:padding="16dp" android:textSize="18sp"
            android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/createTime"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:padding="16dp" android:textSize="14sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity" android:padding="10dp">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="60dp" android:id="@+id/link"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:padding="10dp" app:layout_constraintHorizontal_bias="0.842"
            app:layout_constraintTop_toBottomOf="@+id/pubDate"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="60dp" android:id="@+id/pubDate"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:padding="10dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/guid"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="100dp" android:id="@+id/title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:padding="10dp" android:textSize="24sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="260dp" android:id="@+id/description"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:padding="10dp" android:textSize="16sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="60dp" android:id="@+id/guid"
            app:layout_constraintTop_toBottomOf="@+id/description"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:padding="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>